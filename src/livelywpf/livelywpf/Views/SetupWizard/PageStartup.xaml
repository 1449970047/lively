<Page x:Class="livelywpf.Views.SetupWizard.PageStartup"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:livelywpf.Views.SetupWizard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageStartup">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock>Startup</TextBlock>
            <ui:ToggleSwitch IsOn="{Binding IsStartup, Mode=TwoWay}">Start with windows</ui:ToggleSwitch>
            <TextBlock Margin="0,10,0,0" FontSize="12" TextWrapping="Wrap">Lively needs to run in the background for wallpaper playback.</TextBlock>
        </StackPanel>
    </Grid>
</Page>
